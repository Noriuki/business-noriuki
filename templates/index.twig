{% block html_head_container %}
{% endblock %}
	{% include 'components/html-header.twig' %}

	<body class="{{body_class}}" data-template="base.twig">

      <div id="home">
         <header id="headerHome">
            {% include 'components/header.twig'%}
         </header>
         <div class="container" id="intro">
               <div class="col-8">
                  <h2>A place in the web for your company!</h2>
                  <a href="#">About</a>
               </div>
         </div>
      </div>
      {% include 'components/about.twig' %}
      {% include 'components/contact.twig'%}
      <footer>
         <div class="container" id="footer">
            {% include 'components/footer.twig' %}
         </div>
      </footer>

      {{ function('wp_footer') }}
      <script>
         window.onscroll = function() {fixeNav()};

         var header = document.getElementById("headerHome");

         var sticky = header.offsetTop;

         function fixeNav() {
            if (window.pageYOffset > sticky) {
               header.classList.add("sticky");
            } else {
               header.classList.remove("sticky");
            }
         }
      </script>

	</body>
</html>
